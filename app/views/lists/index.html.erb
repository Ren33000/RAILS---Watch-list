<div class="container">
  <h1 class="my-5">My Watch List</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-lg-4">
        <%= link_to list_path(list) do %>
          <div class="shadow rounded p-3 mb-3">
            <h3 class="mb-3"><%= list.title %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
   <%= link_to "Add a new list", new_list_path, class: "btn btn-info" %>
</div>