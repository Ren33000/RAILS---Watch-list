<div class="container">
  <h1 class="my-5">My Watch List</h1>
  <h2 class="my-5">All your favorites in one place</h2>
   <%= link_to "Create a movie list", new_list_path, class: "btn btn-info my-5" %>
  <h1>My lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6 col-lg-4">
        <%= link_to list_path(list) do %>
          <div class="shadow rounded p-3 mb-3">
            <h3 class="mb-3"><%= list.name %></h3>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>